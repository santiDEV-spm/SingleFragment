    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@color/teal_700"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
